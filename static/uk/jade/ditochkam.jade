										a(href="/#our-contacts") Контакти

							.main-menu-toggle
								.one
								.two
								.three
			
			// Slider 
			section#slider
				.container-fluid
					.row
						.col-md-12
							.page-title
								h1
									span.letter-1 Д
									span.letter-2 і
									span.letter-3 т
									span.letter-4 о
									span.letter-5 ч
									span.letter-6 к
									span.letter-7 а
									span.letter-8 м
					.row
						.col-md-12
							.book-slider.owl-carousel.owl-theme
								.item
									img.hidden-xs(src="../img/slide-1.png", alt="alt")
									img.visible-xs(src="../img/slide-1-mobile.png", alt="alt")
									a(href="multiomega.html").circle.circle-1
										img(src="../img/round-1-uk.png", alt="alt")
								.item
									img.hidden-xs(src="../img/slide-2.png", alt="alt")
									img.visible-xs(src="../img/slide-2-mobile.png", alt="alt")
									a(href="vitamine-c.html").circle.circle-2
										img(src="../img/round-2-uk.png", alt="alt")
									a(href="ukachivanie.html").circle.circle-3
										img(src="../img/round-3-uk.png", alt="alt")
								.item
									.girl
										img(src="../img/girl.png", alt="alt")
									img.hidden-xs(src="../img/slide-3.png", alt="alt")
									img.visible-xs(src="../img/slide-3-mobile.png", alt="alt")
									a(href="multivitamine.html").circle.circle-4
										img(src="../img/round-4-uk.png", alt="alt")
								.item
									img.hidden-xs(src="../img/slide-4.png", alt="alt")
									img.visible-xs(src="../img/slide-4-mobile.png", alt="alt")

		
